@model IEnumerable<BlogWeb.WebUI.Models.PostViewModel>
@using BlogWeb.WebUI.Models;
@{
	Layout = "../Shared/_Layout.cshtml";
	var posts = Model;
	ViewBag.Title = "Fashion";
}

<section class="ftco-section">
	<div class="container">
		<div class="row px-md-4">
			@foreach (var post in posts)
			{
				Html.RenderPartial("_SinglePostIndexPartial", post);
			}
		</div>
		<div class="row">
			<div class="col text-center text-md-left">
				@Html.Action("Pages", "Pagination", new PageModel { Controller = "Fashion", Action = "Index" })
			</div>
		</div>
	</div>
</section>