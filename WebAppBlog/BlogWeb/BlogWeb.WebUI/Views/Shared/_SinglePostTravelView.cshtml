@model BlogWeb.WebUI.Models.PostTravelViewModel
@{ 
	var post = Model;
}
<div class="col-md-12">
	<div class="blog-entry-2 ftco-animate">
		<a href="single.html" class="img" style="background-image: url(/Content/images/@post.ImagePath);"></a>
		<div class="text pt-4">
			<h3 class="mb-2">@Html.ActionLink(post.Title, "Details", "Post", routeValues: new { id = post.Id }, htmlAttributes: null) </h3>
			<p class="mb-4">@post.ShortDescription</p>
			<div class="author mb-4 d-flex align-items-center">
				<a href="#" class="img" style="background-image: url(/Content/images/@post.Author.ImagePath);"></a>
				<div class="ml-3 info">
					<span>Written by</span>
					<h3><a href="#">@post.Author.Username</a>, <span>@post.WrittenDate</span></h3>
				</div>
			</div>
			<div class="meta-wrap d-md-flex align-items-center">
				<div class="half order-md-last text-md-right">
					<p class="meta">
						<span><i class="icon-heart"></i>0</span>
						<span><i class="icon-eye"></i>@post.ViewsCount</span>
						<span><i class="icon-comment"></i>@post.CommentsCount</span>
					</p>
				</div>
				<div class="half">
					<p> @Html.ActionLink("Continue Reading", "Details", "Post", routeValues: new { id = post.Id }, 
							htmlAttributes: new { @class = "btn btn-primary p-3 px-xl-4 py-xl-3" })
				</div>
			</div>
		</div>
	</div>
</div>